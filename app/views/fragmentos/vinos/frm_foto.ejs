<script src="/javascripts/jquery_validation.js"></script>
<script>
    var t = jQuery.noConflict();
    
    t().ready(function () {
        cargarPaises();
        // validate signup form on keyup and submit
        t("#formulario").validate({
            rules: {
                archivo: {
                    required: true
                    
                }                
            },
            messages: {
                archivo: {
                    required: "Ingrese la foto"
                    
                }
            }
        });        
    });
    
    }
</script>
<header>
    <h2><%= titulo %></h2>
</header>
<div class="box">
    <div class="row">
        <%- locals.flash %>
        <% if (info != '') { %>
    <div class="alert alert-success">
        <span><%= info %></span>
    </div>
    <% } %>    
    <% if (error != '') { %>
    <div class="alert alert-danger">
        <span><%= error %></span>
    </div>
    <% } %>    
        <div class="card">
            <div class="card-header">

            </div>
            <div class="card-body">
                <form id="formulario" method="POST" enctype="multipart/form-data" action="/maria/administrar/vino/foto/subir">
                    <input type="hidden" name="external" value="<%- external %>"/>
                    <div class="form-group">
                        <label for="nombre">Foto</label>
                        <input type="file" class="form-control" id="archivo" name="archivo" aria-describedby="marcaHelp" placeholder="Ingrese el nombre">
                        <small id="marcaHelp" class="form-text text-muted">Marca del vino.</small>
                    </div>
                    
                    
                    <div class="modal-footer">
                        <a href="/maria/administrar/vino" class="btn btn-danger">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
