<div class="row login_box" style="margin-left: auto; margin-right: auto;">
    <div class="col-md-12 col-xs-12" align="center">
        <div class="line"><h3>INICIO DE SESION</h3></div>
        <div class="outter"><img src="http://lorempixel.com/output/people-q-c-100-100-1.jpg" class="image-circle"/></div>   
        <h1 id="datos">INGRESE SUS DATOS</h1>

    </div>
    <div class="col-md-6 col-xs-6 follow line" align="center">

    </div>
    <div class="col-md-6 col-xs-6 follow line" align="center">

    </div>

    <div class="col-md-12 col-xs-12 login_control">
        <% if (error  != '') { %>
        <div class="alert alert-danger">
            <%- error %>
        </div>
        <% } %>          
        <form class="login_control" method="POST" action="/maria/inicio_sesion/iniciar">
            <div class="control">
                <div class="label">Correo: </div>
                <input type="email" name="correo" class="form-control" />
            </div>

            <div class="control">
                <div class="label">Clave: </div>
                <input name="clave" type="password" class="form-control"/>
            </div>
            <div align="center">
                <button type="submit" class="btn btn-orange">INICIAR SESION</button>

            </div>
            <div align="center">
                <a href="/maria">Principal</a>
            </div>
            
            <div align="center">
                <a href="/maria/registro">Registrate</a>
            </div>

        </form>

    </div>
</div>